<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="200.022-1" author="JProfessionals">
        <comment>Add analytics fields to job_posting table</comment>

        <addColumn tableName="job_posting">
            <column name="updated_at" type="DATETIME">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="job_posting">
            <column name="source" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="job_posting">
            <column name="estimated_hourly_rate" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="job_posting">
            <column name="location" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
