<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="add-tech-category-to-job-posting" author="claude">
        <addColumn tableName="job_posting">
            <column name="tech_category" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <comment>Add tech_category column for LLM-based categorization of job postings</comment>
    </changeSet>

</databaseChangeLog>
